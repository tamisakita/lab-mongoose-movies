<form action="/celebrities" method="post">
  <div>
    <label for="name">Celebrity Name</label>
      <input type="text" name="name" id="name" placeholder="Type the celebrity's name">
  </div>

  <div>
    <label for="occupation">Celebrity occupation</label>
      <select name="occupation" id="occupation">
        <option value="actor">Actor</option>
        <option value="singer">Singer</option>
        <option value="comedian">Comidian</option>
        <option value="unknown">Unknown</option>
      </select>
  </div>

  <div>
    <label for="catchPhrase">Catch phrase</label>
      <input type="text" name="catchPhrase" id="catchPhrase" placeholder="Type the catch phrase">
  </div>

  {{#if errorMessage }}
    <p>{{errorMessage}}</p>
  {{/if}}

  <button type="submit">Create</button>
</form>